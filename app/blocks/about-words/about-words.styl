.about-words
	margin-bottom 50px

	&__title-wrapper
		margin-bottom 11px
		padding-left 2px

	&__subtitle-wrapper
		margin-bottom 28px
		padding-left 3px

	&__textarea
		padding-left 4px
		overflow hidden
		width 100%
		min-height 151px
		font-family 'Courier New'
		font-size 30px
		line-height 58px
		color $dark-red-v2
		background url(../images/about-words/line.png)
		background-position center 16px
		border-style none
		outline none

		&::placeholder
			font-family 'Courier New'
			font-size 30px
			font-weight 400
			color $dark-red-v2
