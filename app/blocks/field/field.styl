.field
	display flex
	align-items flex-end

	&__input
		margin-left 19px
		padding-left 15px
		flex-grow 1
		max-width 698px
		font-family 'Courier New'
		font-size 30px
		color $dark-red-v2
		background url(../images/personal/line.png)
		background-position center 41px // Проблемы с линтером!
		background-repeat repeat-x // @stylint ignore
		border-style none // @stylint ignore

		&_year
			margin-left 16px

		&_location
			padding-left 12px

		&_skype,
		&_mail
			margin-left 16px

		&_date
			position relative
			top -13px
			margin-left 21px
			padding-left 10px
			max-width 206px
			background-position center 38px

	&__label
		flex-grow 0
		padding-bottom 2px
		font-family 'PT Sans'
		font-size 22px
		font-weight 700
		color $dark-red

	&_type_date
		display flex
		align-items center
