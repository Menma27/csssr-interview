.javascript-level
	padding-top 60px
	display block

	&__title-wrapper
		padding-left 1px

	&__slider
		margin-top 40px
		width 100%
		height 28px
		background-image url(../images/javascript-level/slider.png)
		background-repeat no-repeat

		.ui-slider-handle
			margin-top -10px
			sprite $arrow !important

	&__input
		display none

	&__levels
		padding-top 3px
		display flex
		justify-content space-between

	&__level
		font-family 'PT Sans'
		font-size 13px
		font-weight 700
		line-height 19px
		color $dark-red

	&__level:nth-child(1)
		padding-top 2px

	&__level:nth-child(2)
		padding-left 22px

	&__level:nth-child(3)
		padding-right 29px

	&__level:nth-child(4)
		padding-top 7px
