.personal-data
	padding-top 48px
	display flex
	flex-direction column

	&__item
		display flex
		align-items flex-end

		&:not(:first-child)
			padding-top 10px

		&:nth-child(2)
			padding-top 8px

		&:nth-child(3),
		&:nth-child(5)
			padding-top 11px

	&__input
		max-width 698px
		order 2
		flex-grow 1
		margin-left 19px
		padding-left 15px
		font-family 'Courier New'
		font-size 30px
		color $dark-red-v2
		background url(../images/personal/line.png)
		background-position center 41px // TODO fix styleint
		background-repeat repeat-x // @stylint ignore
		border-style none // @stylint ignore

		&__full-name
			padding-left 13px

		&_year
			margin-left 16px
			padding-left 14px

		&_location
			padding-left 12px

		&_skype,
		&_mail
			margin-left 16px

	&__label
		order 1
		flex-grow 0
		padding-bottom 2px
		font-family 'PT Sans'
		font-size 22px
		font-weight 700
		color $dark-red
