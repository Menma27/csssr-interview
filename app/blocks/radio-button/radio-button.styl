.radio-button
	display block

	&__input
		visibility hidden
		&:checked + label:before
			content ''
			sprite $radio_button_active

	&__label
		position relative
		padding-right 22px
		padding-left 14px
		font-family 'PT Sans'
		font-size 20px
		font-weight 700
		color $black
		&:before
			position absolute
			top -9px
			left -25px
			cursor pointer
			content ''
			sprite $radio_button // TODO сделать after и анимацию

	&__nth-child(0)
		padding-left 2px
