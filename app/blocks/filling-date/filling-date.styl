.filling-date
	display flex
	align-items center

	&__label
		order 1
		font-family 'PT Sans'
		font-size 22px
		font-weight 700
		color $dark-red

	&__input
		position relative
		top -13px
		margin-left 21px
		max-width 206px
		order 2
		padding-left 10px
		font-family 'Courier New'
		font-size 30px
		color $dark-red-v2
		background-color transparent // Проблемы с линтером!
		background-image url(../images/personal/line.png)  // @stylint ignore
		background-position center 38px  // @stylint ignore
		background-repeat repeat-x // @stylint ignore
		border none // @stylint ignore
