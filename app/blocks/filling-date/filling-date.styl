.filling-date
	display flex
	align-items center

	&__label
		order 1
		font-family 'PT Sans'
		font-size 22px
		font-weight 700
		color $dark-red

	&__input
		margin-left 19px
		max-width 210px
		order 2
		padding-left 15px
		font-family 'Courier New'
		font-size 30px
		color #231f20
		background-image url(../images/personal/line.png)
		background-repeat repeat-x
		background-position center 29px // TODO fix styleint
		border none // @stylint ignore
