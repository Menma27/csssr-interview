.checkbox
	display block

	&__input
		display none
		&:checked + label:after
			visibility visible
			opacity 1

	&__label
		position relative
		padding-left 28px
		display inline-block
		font-family 'PT Sans'
		font-size 21px
		font-weight 700
		line-height 25px
		user-select none
		color $black

		&:before
			position absolute
			top 2px
			left 2px
			cursor pointer
			content ''
			sprite $checkbox

		&:after
			position absolute
			top -8px
			left 4px
			content ''
			sprite $checkbox_active
			visibility hidden
			opacity 0
			transition opacity .3s, visibility .3s

		&_indent_left // отступ слева для элементов последней колонки и выравнивание checked
			&:before
				left 4px

			&:after
				left 6px


		&_height_fix// выравнивание по высоте для последних 3 элементов последней колонки и выравнивание checked
			&:before
				top -2px

			&:after
				top -12px

		sup
			position relative
			bottom 1px
			vertical-align text-bottom

		sub
			position relative
			bottom 3px
			&:nth-child(3)
				bottom 2px
		a
			color $dark-blue
