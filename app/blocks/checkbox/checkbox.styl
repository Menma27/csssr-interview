.checkbox
	display block

	&__input
		display none
		&:checked + label:before
			bottom 6px
			content ''
			sprite $checkbox_active

	&__label
		position relative
		padding-left 27px
		display inline-block
		font-family 'PT Sans'
		font-size 21px
		font-weight 700
		line-height 25px
		user-select none
		color #000000 // TODO переменную!
		&:before
			position absolute
			left 0
			cursor pointer
			content ''
			sprite $checkbox

		sup
			position relative
			bottom 1px
			vertical-align text-bottom

		sub
			position relative
			bottom 3px
			&:nth-child(3)
				bottom 2px
		a
			color #1f5f97 // TODO переменная!
